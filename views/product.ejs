<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Control Management</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>

    <!---------------------------- header  ------------------------------->
    
    <div class="header">
      Your Inventory
    </div>

    <!----------------------------- navigation  --------------------------->

    <div class="sidenav">
        <ul>
          <li><a href="/"><p>Products</p></a></li>
          <li><a href="/category"><p>Categories</p></a></li>
          <li><a href="/invoice"><p>Invoice</p></a></li>
          <li><a href="/order"><p>Order details</p></a> </li>
          <li><a href="/supplier"><p>Supplier</p></a>  </li>
          <li><a href="/user"><p>Users</p></a> </li>
          <li><a href="/rp"><p>Returned Products</p></a> </li>
        </ul>
    </div>       

    <!------------------------------ table  ----------------------------------->

    <div class="container">
      <div class="tabs">
        <h1>Available Products</h1>
          <table class="table">
            <thead>
              <tr>
                <th>Product ID</th>
                  <th>Price</th>
                  <th>Product Name</th>
                  <th>Stock Left</th>
                  <th>Category</th> 
              </tr>
            </thead>
            <tbody>
              <% results.forEach((product) => { %>
                <tr>
                  <td><%= product.productID %></td>
                  <td><%= product.productName %></td>
                  <td><%= product.price %></td>
                  <td><%= product.stock %></td>
                  <td><%= product.category %></td>
                </tr>
              <% })%>
            </tbody>
          </table>
      </div>
          
      <div class="new">
        <a href="/newproduct"><p>Add New Product</p></a>
      </div>
    </div>
    
</body>
</html>

